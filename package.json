    "header",
    "sourcemap"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanduynslagerp/ncat.git"
  },
  "scripts": {
    "clean": "del test/fixtures/.tmp && del coverage && del .nyc_output && del .nyc_output",
