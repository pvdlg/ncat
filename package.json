  "bin": {
    "ncat": "./bin/ncat"
  },
  "bugs": {
    "url": "https://github.com/vanduynslagerp/ncat/issues"
  },
  "dependencies": {
    "async": "^2.4.1",
    "chalk": "^1.1.3",
    "concat-with-sourcemaps": "^1.0.4",
    "get-stdin": "^5.0.1",
    "glob": "^7.1.2",
    "read-pkg-up": "^2.0.0",
    "source-map-resolve": "^0.5.0",
    "source-map-url": "^0.4.0",
    "yargonaut": "^1.1.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@metahub/eslint-config": "^1.0.1",
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.2",
    "chmod": "^0.2.1",
