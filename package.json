{
  "name": "ncat",
  "description": "Node CLI to concatenate multiple files, with their sourcemaps and optionally stdin, a banner and a footer",
  "version": "1.1.0",
  "author": "Pierre Vanduynslager",
  "bin": {
    "ncat": "./bin/ncat"
  },
  "bugs": {
    "url": "https://github.com/vanduynslagerp/ncat/issues"
  },
  "dependencies": {
    "concat-with-sourcemaps": "^1.0.4",
    "fs-extra": "^4.0.0",
    "get-stdin": "^5.0.1",
    "globby": "^6.1.0",
    "pify": "^3.0.0",
    "read-pkg-up": "^2.0.0",
    "source-map-resolve": "^0.5.0",
    "source-map-url": "^0.4.0",
    "yargonaut": "^1.1.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@metahub/eslint-config": "^1.6.0",
    "ava": "^0.21.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "chalk": "^2.0.1",
    "codecov": "^2.2.0",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-ava": "^4.2.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jasmine": "^2.8.2",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "execa": "^0.7.0",
    "nyc": "^11.0.3",
    "prettier": "^1.5.3",
    "randomstring": "^1.1.5",
    "rimraf": "^2.6.1",
    "uuid": "^3.1.0"
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib",
    "bin"
  ],
  "homepage": "https://github.com/vanduynslagerp/ncat#readme",
  "keywords": [
    "banner",
    "cat",
    "cli",
    "concat",
    "concatenate",
    "concatenation",
    "files",
    "footer",
    "header",
    "sourcemap"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanduynslagerp/ncat.git"
  },
  "scripts": {
    "clean": "rimraf test/fixtures/.tmp && rimraf coverage && rimraf .nyc_output",
    "compile": "rimraf lib && babel src --source-maps --out-dir lib",
    "lint": "eslint src test package.json",
    "pretest": "npm run clean && npm run compile && npm run lint",
    "test": "nyc ava -v && nyc report --reporter=lcov",
    "codecov": "codecov",
    "prepare": "npm run compile",
    "prepublishOnly": "npm run test"
  }
}
