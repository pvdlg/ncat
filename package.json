{
  "name": "ncat",
  "version": "1.0.0",
  "description": "Node CLI to concatenate multiple files, with their sourcemaps and optionally stdin, a banner and a footer",
  "main": "index.js",
  "bin": {
    "ncat": "./bin/ncat"
  },
  "scripts": {
    "clean": "del test/fixtures/.tmp && del coverage && del .nyc_output",
    "lint": "eslint index.js test",
    "pretest": "npm run lint && npm run clean",
    "test": "nyc ava -v && nyc report --reporter=lcov",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanduynslagerp/ncat.git"
  },
  "keywords": [
    "concatenate",
    "concatenation",
    "cat",
    "concat",
    "files",
    "sourcemap",
    "header",
    "banner",
    "footer",
    "cli"
  ],
  "author": "Pierre Vanduynslager",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vanduynslagerp/ncat/issues"
  },
  "files": [
    "index.js",
    "bin"
  ],
  "homepage": "https://github.com/vanduynslagerp/ncat#readme",
  "dependencies": {
    "async": "^2.4.1",
    "chalk": "^1.1.3",
    "concat-with-sourcemaps": "^1.0.4",
    "get-stdin": "^5.0.1",
    "node-glob": "^1.2.0",
    "read-pkg-up": "^2.0.0",
    "source-map-resolve": "^0.5.0",
    "source-map-url": "^0.4.0",
    "yargonaut": "^1.1.2",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-eslint": "^7.2.3",
    "chmod": "^0.2.1",
    "codecov": "^2.2.0",
    "del-cli": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.3.0",
    "fs-extra": "^3.0.1",
    "nyc": "^11.0.2",
    "uuid": "^3.0.1"
  }
}
